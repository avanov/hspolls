cabal-version: 2.4

name: hspolls
version: 0

library
  build-depends:
    base

  default-language:
    Haskell2010

  exposed-modules:
    Hp.Main

  ghc-options:
    -Wall

  hs-source-dirs:
    src

executable hspolls
  build-depends:
    base,
    hspolls

  default-language:
    Haskell2010

  ghc-options:
    -Wall -threaded -rtsopts

  hs-source-dirs:
    app

  main-is:
    Main.hs
